{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "npm run start:railway",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "routes": [
    {
      "path": "/",
      "rewrite": "/en/"
    },
    {
      "path": "/uk",
      "rewrite": "/uk/"
    },
    {
      "path": "/en",
      "rewrite": "/en/"
    },
    {
      "path": "/ru",
      "rewrite": "/ru/"
    },
    {
      "path": "/zh",
      "rewrite": "/zh/"
    },
    {
      "path": "/es",
      "rewrite": "/es/"
    },
    {
      "path": "/pt",
      "rewrite": "/pt/"
    },
    {
      "path": "/fr",
      "rewrite": "/fr/"
    },
    {
      "path": "/de",
      "rewrite": "/de/"
    },
    {
      "path": "/ar",
      "rewrite": "/ar/"
    },
    {
      "path": "/ja",
      "rewrite": "/ja/"
    },
    {
      "path": "/ko",
      "rewrite": "/ko/"
    },
    {
      "path": "/hi",
      "rewrite": "/hi/"
    },
    {
      "path": "/it",
